<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarCliente"
    android:background="@color/background">

  <TableLayout
      android:layout_width="342dp"
      android:layout_height="451dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="156dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/cedula"
          android:layout_width="109dp"
          android:layout_height="wrap_content"
          android:text="Cedula:"
          android:textColor="#f1c9a0"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/cedulaPrestamo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_span="1"
          android:backgroundTint="#f1c9a0"
          android:ems="10"
          android:inputType="number"
          android:textColor="#f1c9a0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp">

      <TextView
          android:id="@+id/nombre"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nombre:"
          android:textColor="#f1c9a0"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/nombreField"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#f1c9a0"
          android:ems="10"
          android:inputType="textPersonName"
          android:textColor="#f1c9a0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp">

      <TextView
          android:id="@+id/salario"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Salario:"
          android:textColor="#f1c9a0"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/salarioField"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#f1c9a0"
          android:ems="10"
          android:inputType="number"
          android:textColor="#f1c9a0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp">

      <TextView
          android:id="@+id/telefono"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Telefono:"
          android:textColor="#f1c9a0"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/telefonoField"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#f1c9a0"
          android:ems="10"
          android:inputType="number"
          android:textColor="#f1c9a0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginTop="20sp">

      <TextView
          android:id="@+id/nacimiento"
          android:layout_width="125dp"
          android:layout_height="match_parent"
          android:text="Fecha De Nacimiento:"
          android:textColor="#f1c9a0"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/nacimientoField"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:backgroundTint="#f1c9a0"
          android:clickable="true"
          android:ems="10"
          android:focusable="false"
          android:inputType="textPersonName"
          android:textColor="#f1c9a0" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp">

      <TextView
          android:id="@+id/estadoCivil"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="Estado Civil:"
          android:textAlignment="textStart"
          android:textColor="#f1c9a0"
          android:textSize="20sp" />

      <Spinner
          android:id="@+id/civilField"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:backgroundTint="#5C4646"
          android:backgroundTintMode="add"
          android:contextClickable="true"
          android:hapticFeedbackEnabled="true"
          android:spinnerMode="dialog" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp">

      <TextView
          android:id="@+id/direccion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Direccion:"
          android:textColor="#f1c9a0"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/direccionField"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="#f1c9a0"
          android:ems="10"
          android:inputType="textMultiLine"
          android:textColor="#f1c9a0" />

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  </TableLayout>

  <Button
      android:id="@+id/guardar"
      android:layout_width="158dp"
      android:layout_height="56dp"
      android:layout_marginEnd="124dp"
      android:layout_marginBottom="40dp"
      android:text="Agregar"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <TextView
      android:id="@+id/textView9"
      android:layout_width="217dp"
      android:layout_height="45dp"
      android:layout_marginStart="96dp"
      android:layout_marginTop="16dp"
      android:text="INFORMACION:"
      android:textColor="#f1c9a0"
      android:textSize="30sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="216dp"
      android:layout_height="76dp"
      android:layout_marginStart="96dp"
      android:layout_marginTop="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView9"
      app:srcCompat="@mipmap/cliente" />

</androidx.constraintlayout.widget.ConstraintLayout>